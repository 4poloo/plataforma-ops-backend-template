# Ambiente
APP_ENV=local

# Conexión a tu mongod local en Docker, autenticando con el usuario de aplicación:
MONGO_URI=mongodb://APP_USER:APP_PASSWORD@127.0.0.1:27017/?authSource=portal_sc_QA
MONGO_DB=portal_sc_QA

# === AWS S3 para DECLAREPT Plataforma ===
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_PREFIX_DECLAREPT=2/wms/SURCHILE1/PLATAFORMA

# === Colecciones (opcional, por claridad con tu front y staging) ===
COLL_PRODUCTOS=products
COLL_RECETAS=recipes
COLL_RECETAS_STAGING=staging_recipes
COLL_DECLAREPT=declare_pt_events
COLL_CONSUMIRVASOT=consume_vasot_events

# === Cargas masivas / formatos ===
MAX_UPLOAD_MB=10
CSV_DATE_FORMAT=DD-MM-YY
STORE_DATES_AS_DATETIME=true
TZ=America/Santiago

# === Integración WMS / Invas ===
WMS_URL=https://g5e0ryc7rd.execute-api.us-east-1.amazonaws.com
WMS_USER=YOUR_WMS_USER
WMS_PASS=YOUR_WMS_PASSWORD
WMS_DEFAULT_WAREHOUSE=CO LAMPA
WMS_TIMEOUT_SECONDS=30
WMS_QUERY_URL_QA=https://cerca-surchileqa.impruvex.com/api/invas/rest/os/ConsultarOs
WMS_QUERY_URL_PROD=https://cerca-surchile.impruvex.com/api/invas/rest/os/ConsultarOs
WMS_LOGIN_URL_QA=https://cerca-surchileqa.impruvex.com/api/invas/rest/usuario/loginWS
WMS_LOGIN_URL_PROD=https://cerca-surchile.impruvex.com/api/invas/rest/usuario/loginWS

# === Logging ===
LOG_LEVEL=INFO

# === DECLAREPT sync ===
# Frecuencia (segundos) para el sync de DECLAREPT/CONSUMIR_VASOT desde S3.
# Mínimo permitido: 60s. Por defecto en código: 300s.
DECLAREPT_SYNC_INTERVAL_SECONDS=60
